<Window x:Class="SaaMedW.View.EditInvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaaMedW.View"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" Padding="10">
    <Window.Resources>
        <Style x:Key="PriceEditStyle" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Right"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <TextBlock Margin="0,10,0,10" DockPanel.Dock="Top" Text="{Binding DateNumSum}">111</TextBlock>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Margin="0,0,10,10" Grid.Row="0" Grid.Column="0" Content="Плательщик"></Label>
            <ComboBox Margin="0,0,0,10" Grid.Row="0" Grid.Column="1" MinWidth="200" ItemsSource="{Binding ListPerson}" 
                    SelectedValuePath="Id" 
                    SelectedValue="{Binding PersonId}">
            </ComboBox>
            <Label Margin="0,0,10,10" Grid.Row="1" Grid.Column="0" Content="Статус"></Label>
            <ComboBox Margin="0,0,0,10" Grid.Row="1" Grid.Column="1" MinWidth="200" ItemsSource="{Binding ListStatus}" 
                        SelectedValuePath="Id" 
                        SelectedValue="{Binding SelectedStatus}">
            </ComboBox>
        </Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Наименование услуги" Binding="{Binding BenefitName, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Kol, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:0.00}}" EditingElementStyle="{StaticResource PriceEditStyle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Сумма"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
