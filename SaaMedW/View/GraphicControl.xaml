<UserControl x:Class="SaaMedW.View.GraphicControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaaMedW.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox ItemsSource="{Binding}" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Margin="5" TextWrapping="Wrap">
                    <Run Text="{Binding Path=Dt, StringFormat={}{0:dd.MM.yyyy}}" FontWeight="Bold"></Run>
                    <Run Text="{Binding Path=personal.Fio}"></Run>
                    <Run Text="{Binding Path=personal.Specialty1.Name}"></Run>
                    <Run Text="{Binding Path=Interval, Mode=OneWay}"></Run>
                </TextBlock>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
